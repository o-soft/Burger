// * Setup the `index.handlebars` to have the template that Handlebars can render onto.

//* Create a button in `index.handlebars` that will submit the user input into the database.

<div class="container">
	<div class="row">
		<center>

			<div class="col-md-6">
				<h2 class="title-font">Ready to Grub on Burgers!</h2>
				<div id="lets-eat">

					{{#each burger}}
						{{#unless devoured}}
							<form action="/{{this.id}}_method=PUT method="POST">
								<div class="input-group col-md-12 col-xs-12">
									<li class="form-control">
										{{this.name}}
										<div class="col-md-7 col-xs-7">{{id}}. {{burger_name}}</div>
										<div class="col-md-5 col-xs-5">
											<input name="devoured" type="hidden" class="form-control" placeholder="Customer Name" value="true">
										</div>
									</li>
									<span class="input-group-btn devour-button">
									</span>
										<button class="btn btn-success devour-button" type="submit">Devour Da Burger!</button>
									</span>
								</div>
							</form>
						{{/unless}}
					{{/each}}	

				</div>
			</div>

			<div class="col-md-6">
				<h2 class="title-font">Already Devoured!</h2>
				<div id="eaten">

					{{#each burger}}
						{{#if this.devoured}}
							<form action="/{{this.id}}_method=PUT method="POST">
								<div class="input-group col-md-12 col-xs-12">
									<li class="form-control">
									{{this.name}}
										<div class="col-md-7 col-xs-7">{{id}}. {{burger_name}}</div>
										<div class="col-md-5 col-xs-5">
											<input name="gone" type="hidden" class="form-control" value="false">
										</div>
									</li>
									<span class="input-group-btn eaten-button">
										<button class="btn btn-info eaten-button" type="submit">Nom-Nom-Nom</button>
									</span>
								</div>
							</form>
						{{/if}}
					{{/each}}	

				</div>
			</div>

			<div class="col-md-6">
				<h2 class="title-font">Add a Burger</h2>
				<div id="add-burger">

					<form class="create-update-form" action="/" method="POST">
						<div class="form-group col-md-12 col-xs-12">
								<label for="bu" class="col-md-7 col-xs-7">Burger Name:</label></br>
								<div class="col-md-5 col-xs-5">
									<input name="name" type="text" id="bu" class="form-control">
								</div>
						</div>

						<div class="form-group col-md-12 col-xs-12">
								<label for="bu" class="col-md-7 col-xs-7">Burger Name:</label></br>
								<div class="col-md-5 col-xs-5">
									<input name="add" type="radio" class="form-control" value="1" checked> Ready <br>
									<input name="add" type="radio" class="form-control" value="0"> Devoured
								</div>
						</div>
							<span class="input-group-btn">
								<button class="btn btn-info" type="submit">Add Burger</button>
							</span>
					</form>

				</div>
			</div>

		</center>
	</div>
</div>

